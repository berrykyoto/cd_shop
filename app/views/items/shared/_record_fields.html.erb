<div class="nested-fields well well-compact">
	<div class="form-group">
		<%= f.label :record_name, "レコード" %>
		<%= f.text_field :record_name %><br>
		<%= link_to_remove_association "remove record", f %>
	</div>
	<div class="songs">
		<%= f.fields_for :songs do |song| %>
		<%= render "items/shared/song_fields", { f: song, songs: @songs } %>
		<% end %>
	<div class="links">
      <%= link_to_add_association "add song", f, :songs,partial: "items/shared/song_fields", render_options: {locals:{ songs: @songs }} %>
    </div>
	</div>
</div>