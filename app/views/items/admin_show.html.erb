<!-- 商品詳細 管理者用-->
<%= render 'shared/header' %>

<div class="body-content">
  <div class="container-fluid main-content">
    <div class="row main-top">
      <div class="col-sm-6">
        <div class="item-image-admin_show"></div>
      </div>
      <div class="col-sm-6 item-box-show">
        <div class="item-detail">
          <h2 class="title"><%= @item.title %></h2>
          <p class="singer"><%= @item.singer %></p>
          <p class="price">¥<%= @item.price %></p>
          <p class="stock">残り<%= @item.stock %>枚です</p>
        </div>
      </div>
    </div>
    <h2 class="h2">商品詳細</h2>
    <div class="row main-bottom">
      <div class="col-sm-6 left-box">
        <table class="table table-striped table-bordered">
           <tbody>
            <tr>
              <td>商品名</td>
              <td><%= @item.title %></td>
            </tr>
            <tr>
              <td>シングル/アルバム</td>
              <td><%= @item.style %></td>
            </tr>
            <tr>
              <td>アーティスト</td>
              <td><%= @item.singer %></td>
            </tr>
            <tr>
              <td>レーベル</td>
              <td><%= @item.label %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre_name %></td>
            </tr>
            <tr>
              <td>発売日</td>
              <td><%= @item.age %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-sm-6 right-box">
        <table class="table table-striped table-bordered">
          <tbody>
            <tr>
              <td>商品説明</td>
              <td><%= @item.comment %></td>
            </tr>
            <% @item.records.each do |record| %>
            <tr>
              <td>収録曲</td>
              <td><%= record.record_name%></td>
            </tr>
              <% record.songs.each do |song| %>
                <tr>
                  <td><%= song.song_name%></td>
                  <td><%= song.song_time%></td>
                  <td><%= song.song_number%></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <div class="button-area-admin_show">
    <div><%= link_to "編集する",edit_item_path(@item), class:"btn-sm btn-success"%></div>
    <div><%= link_to "削除する",admin_index_path, method: :delete, class:"btn-sm btn-danger"%></div>
    </div>
  </div>
</div>