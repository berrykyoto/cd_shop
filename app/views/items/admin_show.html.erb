<!-- 商品詳細 管理者用-->
<%= render 'shared/header' %>

<div class="body-content">
  <div class="container-fluid main-content">
    <div class="row main-top">
      <div class="col-sm-6">
        <div>
          <%= attachment_image_tag @item, :item_image, :fill, 400, 400, fallback: "noimage.png", size: '400x400' %>
        </div>
      </div>
      <div class="col-sm-6 item-box-show">
        <div class="item-detail">
          <h2 class="title detail1"><%= @item.title %></h2>
          <p class="singer detail2"><%= @item.singer %></p>
          <p class="price detail2">¥<%= @item.price %></p>
          <p class="stock detail2">残り<%= @item.stock %>枚です</p>
        </div>
        <div class="button-area-admin_show">
          <%= link_to "　編集する　",edit_item_path(@item), class:"btn btn-lg btn-info"%>
        </div>
      </div>
    </div>
    <h2 class="h2">商品詳細</h2>
    <div class="row main-bottom">
      <div class="col-sm-6 left-box">
        <table class="table table-striped table-bordered">
           <tbody>
            <tr>
              <td>商品名</td>
              <td><%= @item.title %></td>
            </tr>
            <tr>
              <td>シングル/アルバム</td>
              <td><%= @item.style_i18n %></td>
            </tr>
            <tr>
              <td>アーティスト</td>
              <td><%= @item.singer %></td>
            </tr>
            <tr>
              <td>レーベル</td>
              <td><%= @item.label %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre.genre_name %></td>
            </tr>
            <tr>
              <td>発売日</td>
              <td><%= @item.age %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-sm-6 right-box">

        <table class="table table-striped table-bordered">
          <tbody>
            <tr>
              <td>商品説明</td>
            </tr>
            <tr>
              <td><%= simple_format(h(@item.comment)) %></td>
            </tr>
          </tbody>
        </table>

        <% @item.records.each do |record| %>
          <p class="record-head">収録曲(<%= record.record_name %>)</p>

        <table class="table table-striped table-bordered">
          <tbody>
              <% record.songs.each do |song| %>
                <tr>
                  <td><%= song.song_number%></td>
                  <td><%= song.song_name%></td>
                  <td><%= song.song_time%></td>
                </tr>
              <% end %>
          </tbody>
        </table>
        <% end %>

      </div>
    </div>
  </div>
</div>
<%= render 'shared/footer' %>