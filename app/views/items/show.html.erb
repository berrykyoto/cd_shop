<!-- 商品詳細 ユーザー用-->
<%= render 'shared/header' %>

<div class="body-content">
  <div class="container-fluid main-content">
    <div class="row main-top">
      <div class="col-sm-6">
        <div>
          <%= attachment_image_tag @item, :item_image, :fill, 400, 400, fallback: "noimage.png", size: '400x400' %>
        </div>
      </div>
      <div class="col-sm-6 item-box-show">
        <div class="item-detail">
          <h2 class="title detail1"><%= @item.title %></h2>
          <p class="singer detail2"><%= @item.singer %></p>
          <p class="price detail2">¥<%= @item.price %></p>
          <p class="stock detail2">
            <% if @item.stock > 10 %>
                  在庫あり<br>
                <% else %>
                  残りわずか<br>
                <% end %>
          </p>
        </div>
<!-- 購入ボタン　条件分岐 ここから-->
        <% if @item.stock == 0 %>

          <p>売り切れ</p>

        <% else %>

          <% if user_signed_in? %>

          <% if @cart_items.present? %>

              <div class="item-show-cart">
                <p>-------------------------- お客様のカート　--------------------------</p>
                <table class="table table-striped table-bordered">
                  <thead>
                    <tr>
                      <th></th>
                      <th>商品名</th>
                      <th>価格</th>
                      <th><%if flash[:notice] %><p id="notice"><%= flash[:notice] %></p><% end %>数量</th>
                      <th>変更</th>
                      <th>小計</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @cart_items.each do |cart_item| %>
                    <tr>
                      <td><%= attachment_image_tag cart_item.item, :item_image, :fill, 50, 50, fallback: "noimage.png", size: '50x50' %></td>
                      <td><%= cart_item.item.title %></td>
                      <td>￥<%= cart_item.item.price %></td>
                      <%=form_for(cart_item) do |f|%>
                      <td>
                        <% if cart_item.item.stock < 10 %>
                        <%= f.number_field :quantity, min: 1, max: cart_item.item.stock %><br>
                        <% else %>
                        <%= f.number_field :quantity, min: 1, max: 10 %><br>
                        <% end %>
                        <% if cart_item.item.stock > 10 %>
                          在庫あり<br>
                        <% else %>
                          残りわずか<br>
                        <% end %>
                      </td>
                      <td class="button-area"><%= f.submit "更新",class:"btn btn-info btn-xs" %>
                      <% end %>
                          <%= link_to "削除", cart_item_path(cart_item.id), method: :delete,data: { confirm: 'カートから出してよろしいですか？' }, class:"btn btn-default btn-xs" %></td>

                      <td>￥<%= cart_item.item.price * cart_item.quantity %></td>
                    </tr>
                    <% end %>
                </tbody>
              </table>
              <div class="total-box">
                <p class="total">商品合計　　￥<%= @total_price %></p>
              </div>
            </div>

          <%= form_for (@cart_item) do |f| %>
            <div class="cart-area">
              <div class="item-show">
              <div class="item-show-buy">
                購入数<%= f.select :quantity, @current_item_array %>枚
              </div>
              </div>
                <%= f.hidden_field :item_id, :value => @item.id %>
                <%= f.hidden_field :user_id, :value => current_user.id %>
                <div class="cart-button-area">
                  <%= f.submit "カートに入れる",class:"btn btn-info btn-lg cart-button" %>
                </div>
              </div>
            <% end %>



          <% else %>
            <%= form_for (@cart_item) do |f| %>
            <div class="cart-area">
              <div class="item-show">
              <div class="item-show-buy">
                購入数<%= f.select :quantity, @current_item_array %>枚
              </div>
              </div>
                <%= f.hidden_field :item_id, :value => @item.id %>
                <%= f.hidden_field :user_id, :value => current_user.id %>
                <div class="cart-button-area">
                  <%= f.submit "カートに入れる",class:"btn btn-info btn-lg cart-button" %>
                </div>
              </div>
            <% end %>
          <% end %>

          <% else %>

            <div class="cart-area">
              <p>商品はログインしないと購入できません</p>
            </div>
          <% end %>

        <% end %>
<!-- 購入ボタン　条件分岐 ここまで-->

      </div>
    </div>
    <h2 class="h2">商品詳細</h2>
    <div class="row main-bottom">
      <div class="col-sm-6 left-box">
        <table class="table table-striped table-bordered">
          <tbody>
            <tr>
              <td>商品名</td>
              <td><%= @item.title %></td>
            </tr>
            <tr>
              <td>シングル/アルバム</td>
              <td><%= @item.style_i18n %></td>
            </tr>
            <tr>
              <td>アーティスト</td>
              <td><%= @item.singer %></td>
            </tr>
            <tr>
              <td>レーベル</td>
              <td><%= @item.label %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre.genre_name %></td>
            </tr>
            <tr>
              <td>発売日</td>
              <td><%= @item.age %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-sm-6 right-box">

        <table class="table table-striped table-bordered">
          <tbody>
            <tr>
              <td>商品説明</td>
            </tr>
            <tr>
              <td><%= simple_format(h(@item.comment)) %></td>
            </tr>
          </tbody>
        </table>

        <% @item.records.each do |record| %>
          <p class="record-head">収録曲(<%= record.record_name %>)</p>

        <table class="table table-striped table-bordered">
          <tbody>
              <% record.songs.each do |song| %>
                <tr>
                  <td><%= song.song_number%></td>
                  <td><%= song.song_name%></td>
                  <td><%= song.song_time%></td>
                </tr>
              <% end %>
          </tbody>
        </table>
        <% end %>


      </div>
    </div>
  </div>
</div>
<%= render 'shared/footer' %>
