<!-- 商品詳細 ユーザー用-->
<%= render 'shared/header' %>

<div class="body-content">
  <div class="container-fluid main-content">
    <div class="row main-top">
      <div class="col-sm-6">
        <div>
          <%= attachment_image_tag @item, :item_image, :fill, 400, 400, fallback: "noimage.png", size: '400x400' %>
        </div>
      </div>
      <div class="col-sm-6 item-box-show">
        <div class="item-detail">
          <h2><%= @item.title %></h2>
          <p><%= @item.singer %></p>
          <p>¥<%= @item.price %></p>
        </div>
<!-- 購入ボタン　条件分岐 ここから-->
        <% if @item.stock == 0 %>

          <p>売り切れ</p>

        <% else %>

          <% if user_signed_in? %>

            <div class="cart-area">
            <span class="quantity">購入数</span>

              <%= form_for (@cart_item) do |f| %>
                <%= f.select :quantity, @current_item_array %>枚
                <%= f.hidden_field :item_id, :value => @item.id %>
                <%= f.hidden_field :user_id, :value => current_user.id %>
                <div class="cart-button-area">
                  <%= f.submit "カートに入れる",class:"btn btn-info btn-lg cart-button" %>
                </div>
              <% end %>

              </div>

          <% else %>

            <div class="cart-area">
              <p>商品はログインしないと購入できません</p>
            </div>
          <% end %>

        <% end %>
<!-- 購入ボタン　条件分岐 ここまで-->

      </div>
    </div>
    <h2 class="h2">商品詳細</h2>
    <div class="row main-bottom">
      <div class="col-sm-6 left-box">
        <table class="table table-striped table-bordered">
          <tbody>
            <tr>
              <td>商品名</td>
              <td><%= @item.title %></td>
            </tr>
            <tr>
              <td>シングル/アルバム</td>
              <td><%= @item.style_i18n %></td>
            </tr>
            <tr>
              <td>アーティスト</td>
              <td><%= @item.singer %></td>
            </tr>
            <tr>
              <td>レーベル</td>
              <td><%= @item.label %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre.genre_name %></td>
            </tr>
            <tr>
              <td>発売日</td>
              <td><%= @item.age %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-sm-6 right-box">

        <table class="table table-striped table-bordered">
          <tbody>
            <tr>
              <td>商品説明</td>
            </tr>
            <tr>
              <td><%= simple_format(h(@item.comment)) %></td>
            </tr>
          </tbody>
        </table>

        <% @item.records.each do |record| %>
          <p class="record-head">収録曲(<%= record.record_name %>)</p>

        <table class="table table-striped table-bordered">
          <tbody>
              <% record.songs.each do |song| %>
                <tr>
                  <td><%= song.song_number%></td>
                  <td><%= song.song_name%></td>
                  <td><%= song.song_time%></td>
                </tr>
              <% end %>
          </tbody>
        </table>
        <% end %>


      </div>
    </div>
  </div>
</div>
<%= render 'shared/footer' %>
