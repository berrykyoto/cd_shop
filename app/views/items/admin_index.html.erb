<!-- サイトトップ 管理者用-->
<%= render 'shared/header' %>

<div class="search"></div><!-- 検索フォーム -->

<div class="body-content">
  <div class="container-fluid">
    <h2 class="h2">商品一覧</h2>
    <div class="row main-content">
          <table class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>ID</th>
                <th>Image</th>
                <th>商品名</th>
                <th>アーティスト</th>
                <th>分類</th>
                <th>レーベル</th>
                <th>ジャンル</th>
                <th>価格</th>
                <th>在庫数</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @items.each do |item| %>
              <tr>
                <td><%= item.id %></td>
                <td><%= item.item_image_id %></td>
                <td><%= item.title %></td>
                <td><%= item.singer %></td>
                <td><%= item.style %></td>
                <td><%= item.label %></td>
                <td><%= item.genre_name %></td>
                <td><%= item.price %></td>
                <td><%= item.stock %></td>
                <td><%= link_to"詳細",item_path(item.id),class:"btn-info btn-xs"%></td>
                <td><%= link_to "編集",edit_item_path(@item), class:"btn btn-info btn-xs"%></td>
                <td><%= link_to "削除",admin_index_path, method: :delete, class:"btn btn-default btn-xs"%></td>
              </tr>
              <% end %>
            </tbody>
          </table>
    </div>
  </div>
</div>