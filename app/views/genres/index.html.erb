<!-- ジャンル追加-->
<%= render 'shared/header' %>

<div class="body-content">
  <div class="container-fluid">
    <h2 class="h2">ジャンルの追加</h2>
    <div class="main-top">
      <table class="table">
        <tbody>
          <%= form_for(@genre) do |f| %>
            <tr>
              <div class="field row">
                <td><label for="genre_name">ジャンル名</label></td>
                <td><%= f.text_field :genre_name, class:"form-control" %></td>
              </div>
              <div class="actions row">
                <td><%= f.submit "作成", class:"btn btn-info btn-xs" %></td>
              </div>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <h2 class="h2">ジャンルの編集・削除</h2>
    <!-- すべてのジャンル名を一覧表示↓ -->

    <div class="main-bottom">
      <table class="table table-striped table-bordered">
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.genre_name %></td>
              <td><%= link_to "編集", edit_genre_path(genre), class:"btn btn-info btn-xs" %></td>
              <td><%= link_to "削除", genre_path(genre), method: :delete, class:"btn btn-default btn-xs" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>