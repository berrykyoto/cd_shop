<!-- ジャンル追加-->
<%= render 'shared/header' %>

<div class="body-content">
  <div class="container-fluid">
    <div class="row">
       <h2 class="h2">ジャンルの追加</h2>
      <div class="genre-main-top">
        <table class="table">
          <tbody>
            <%= form_for(@genre) do |f| %>
              <tr>
                <div class="field">
                  <td><label for="genre_name">ジャンル名</label></td>
                  <td><%= f.text_field :genre_name, class:"form-control" %></td>
                </div>
                <div class="actions">
                  <td><%= f.submit "　作 成　", class:"btn btn-info btn-xs genre-button" %></td>
                </div>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <h2 class="h2">ジャンルの編集・削除</h2>
      <!-- すべてのジャンル名を一覧表示↓ -->

      <div class="genre-main-bottom">
        <table class="table table-striped table-bordered">
          <tbody>
            <% @genres.each do |genre| %>
              <tr>
                <td class="genre-center"><%= genre.genre_name %></td>
                <td class="genre-center"><%= link_to "　編 集　", edit_genre_path(genre), class:"btn btn-info btn-xs" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>

<%= render 'shared/footer' %>