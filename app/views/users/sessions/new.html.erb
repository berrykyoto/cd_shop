<%= render 'shared/header' %>
<div class="body-content">
  <div class="body-box">
  <h2 class="h2-box">会員ログインページ</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "regist-box" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %><br />
    <%= f.password_field :password, autocomplete: "off", class: "regist-box" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, "保存する" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "ログイン", class:"btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>

<%= render "users/shared/links" %>

  </div>
</div>


