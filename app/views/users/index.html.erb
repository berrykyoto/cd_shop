<!-- ユーザー 一覧 管理者用-->
<%= render 'shared/header' %>


<div class="search">
  <%= form_tag users_path, :method => 'get' do %> <%#　projects_pathはモデル名で読みかえること %>
        <p>
          <%= text_field_tag :search, params[:serch] %>
          <%= submit_tag "検索", :name => nil %>
        </p>
  <% end %>
</div><!-- 検索フォーム -->

<div class="body-content">
  <div class="container-fluid">
    <h2 class="h2">ユーザー 一覧</h2>
    <div class="row main-content">
          <table class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>ID</th>
                <th>お名前</th>
                <th>フリガナ</th>
                <th>郵便番号</th>
                <th>住所</th>
                <th>電話番号</th>
                <th>メールアドレス</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
              <tr>
                <td><%= user.id %></td>
                <td><%= user.name %></td>
                <td><%= user.name_kana %></td>
                <td><%= user.post_code %></td>
                <td><%= user.address %></td>
                <td><%= user.phone %></td>
                <td><%= user.email %></td>
                <td><%= link_to "詳細", user_path(user), class: "btn btn-info btn-sm" %></td>
                <td><%= link_to "編集", edit_user_path(user), class: "btn btn-default btn-sm" %></td>
                <td><%= link_to "削除", user_path(user.id), method: :delete, class: "btn btn-danger btn-sm" %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
    </div>
  </div>
</div>

<%= render 'shared/footer' %>