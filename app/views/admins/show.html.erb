<!-- 管理者情報の編集 -->
<%= render 'shared/header' %>

<div class="body-content">
  <div class="container-fluid main-content">
    <h2 class="h2">管理者ページ</h2>
    <div class="user-info">
      <h3 class="h3">会員情報</h3>
      <table class="table">
        <tbody>
          <tr>
            <td>お名前</td>
            <td><%= @admin.name %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @admin.email %></td>
          </tr>
        </tbody>
      </table>
      <div class="button-area">
        <%= link_to "編集する", edit_admin_path(@admin), class: "btn btn-info btn-lg user-button" %>
      </div>
    </div>
  </div>
</div>