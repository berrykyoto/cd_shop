<%= render 'shared/header' %>
<div class="body-content">
  <div class="body-box">
  <h2 class="h2-box">管理者ログイン</h2>
  <table class="table">
    <tbody>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <tr>
      <td><%= f.label :email, "メールアドレス" %></td>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "regist-box" %></td>
    </tr>
  </div>

  <div class="field">
    <tr>
      <td><%= f.label :password, "パスワード" %></td>
      <td><%= f.password_field :password, autocomplete: "off", class: "regist-box" %></td>
    </tr>
  </div>
    
  <% if devise_mapping.rememberable? -%>
  <tr>
    <div class="field">
      <td></td>
      <td><%= f.check_box :remember_me %>
          <%= f.label :remember_me, "保存する" %></td>
    </div>
  </tr>
  <% end -%>
  </tbody>
</table>

  <div class="login-box">
  <div class="actions">
    <%= f.submit "ログイン", class:"btn btn-primary btn-lg" %>
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "パスワードを忘れた", new_password_path(resource_name) %>
<% end -%>
  </div>

  </div>
</div>


