<%= render 'shared/header' %>
<div class="body-content">
  <div class="body-box">
  <h2 class="h2-box">管理者登録ページ</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name, "名前" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "regist-box" %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "regist-box" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "regist-box" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード再確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "regist-box" %>
  </div>

  <div class="actions">
    <%= f.submit "登録", class:"btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>
</div>
</div>


