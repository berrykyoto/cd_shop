<!-- カート内商品一覧 -->
<%= render 'shared/header' %>

<div class="body-content">
  <% if  @cart_items.present? %>
    <div class="container-fluid main-content">
    <div class="process-box">
      <p class="process"><span class="red">カート</span>　→　配送先の入力・お支払い方法の設定　→　確認　→　完了</p>
    </div>
    <div class="">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th></th>
            <th>商品名</th>
            <th>価格</th>
            <th><%if flash[:notice] %><p id="notice"><%= flash[:notice] %></p><% end %>数量</th>
            <th>変更</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= attachment_image_tag cart_item.item, :item_image, :fill, 50, 50, fallback: "noimage.png", size: '50x50' %></td>
            <td><%= cart_item.item.title %></td>
            <td>￥<%= cart_item.item.price %></td>
            <%=form_for(cart_item) do |f|%>
              <td>
                <% if cart_item.item.stock < 10 %>
                <%= f.number_field :quantity, min: 1, max: cart_item.item.stock %><br>
                <% else %>
                <%= f.number_field :quantity, min: 1, max: 10 %><br>
                <% end %>
                <% if cart_item.item.stock > 10 %>
                  在庫あり<br>
                <% else %>
                  残りわずか<br>
                <% end %>
                  ※在庫数以上は購入できません。
              </td>
              <td class="button-area"><%= f.submit "変更",class:"btn btn-info btn-xs" %>
            <% end %>
                  <%= link_to "削除", cart_item_path(cart_item.id), method: :delete,data: { confirm: '削除しますか？' }, class:"btn btn-default btn-xs" %></td>

            <td>￥<%= cart_item.item.price * cart_item.quantity %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="total-box">
        <p class="total">商品合計　　￥<%= @total_price %></p>
      </div>
    </div>

    <div class="main-bottom">

        <%= link_to "買い物を続ける", items_path, class: "btn btn-default btn-xs cart-button" %>
        <%= link_to "　レジに進む　", new_order_path, class: "btn btn-danger btn-xs cart-button" %>

    </div>
  <% else %>
  <div class="container-fluid main-content">
    <div class="row">
    <p class="pbox">カートに商品がありません</p>
    <div class="main-bottom">
      <%= link_to "買い物を続ける", items_path, class: "btn btn-primary btn-xs" %>
    </div>
    </div>
  </div>
  </div>
  <% end %>
</div>
