<!-- 注文履歴一覧 管理者用-->
<%= render 'shared/header' %>

<div class="search"></div><!-- 検索フォーム -->

<div class="body-content">
  <div class="container-fluid">
    <h2 class="h2">注文履歴一覧</h2>
    <div class="row main-content">
          <table class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>注文日</th>
                <th>注文者/ID</th>
                <th>商品名</th>
                <th>金額</th>
                <th>ステータス</th>
                <th></th>
                <th></th>
              </tr>
            </thead>

            <% @orders.each do |order| %>
            <tbody>
              <tr>
                <td><%= order.created_at %></td>
                <td><%= order.user.name %>/<%= order.user_id %></td>
                <td><%= @first_item.item.title %></td>
                　<!-- order_itemsのうち最初の商品のみ表示する。あってんのかな？？？ -->
                <td><% order.order_items.each do |order_item| %>
                ￥<%= @total_price + order_item.sub_price %>
                　<!--  order_itemのsub_priceの合計-->
                <% end %></td>
                <td><%= order.status %></td>
                <td><%= link_to "詳細", order_path(order), class: "btn btn-info btn-xs" %></td>
                <td><%= link_to "編集", edit_order_path(order), class: "btn btn-default btn-xs" %></td>
              </tr>
            </tbody>
            <% end %>

          </table>
    </div>
  </div>
</div>