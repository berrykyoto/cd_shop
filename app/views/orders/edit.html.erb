<!-- 注文内容の編集　管理者用 -->
<%= render 'shared/header' %>

<div class="body-content">
  <div class="container-fluid main-content">
    <h2 class="h2">注文履歴の詳細</h2>

    <%= form_for(@order) do |f| %><!-- order編集フォーム　はじまり -->

    <div class="status-box">
      <p><%= @order.created_at %>のご注文　     
         <%= f.select :status, Order.statuses_i18n.invert.keys, {prompt: @order.status}, class: 'form-control btn btn-default' %>
      </p>
    </div>
    <div class="">
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th></th>
            <th>商品名</th>
            <th>価格</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>

        <% @order_items.each do |order_item| %>

        <tbody>
          <tr>
            <td><%= attachment_image_tag order_item.item, :item_image, :fill, 20, 20, fallback: "noimage.png", size: '20x20' %></td>
            <td><%= order_item.item.title %></td>
            <td><%= order_item.sub_price / order_item.quantity %></td>
            <td><%= order_item.quantity %></td>
            <td>￥<%= order_item.sub_price %></td>
          </tr>
        </tbody>

        <% end %>

      </table>
      <div class="total-box">
        <p class="total">商品合計　￥<%= @total_price %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6 send-info"><!-- 配送先 -->
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>配送先</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>お名前</td>
              <td><%= f.text_field :send_name %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= f.text_field :send_post_code %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= f.text_field :send_address %></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="col-sm-6 payment"><!-- お支払い方法 -->
        <table>
          <thead>
            <tr>
              <th>お支払い方法</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= f.select :payment, Order.payments_i18n.invert.keys, {prompt: @order.payment}, class: 'form-control btn btn-default' %></td>
              <!-- ここは、ラジオボタンではなく、セレクトボックスにしたほうがいい気がする。 -->
            </tr>
          </tbody>
        </table>
      </div>
    </div>


    <div class="main-bottom">

        <button type="button" class="btn btn-default btn-xs cart-button">前に戻る</button>
        <%= f.submit '更新する', class:"btn btn-info btn-xs cart-button"  %>

    </div>

    <% end %><!-- order編集フォーム　おわり -->

  </div>
</div>