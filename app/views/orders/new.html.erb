<!-- 配送先の入力・支払方法の設定 -->
<div class="body-content">
  <div class="container-fluid main-content">
    <div class="process-box">
      <p class="process">カート　→　<span class="red">配送先の入力・お支払い方法の設定</span>　→　確認　→　完了</p>
    </div>


    <%=form_tag({ :controller => 'orders', :action => 'create' }, { :method => :post}) do %>

      <div class="send-info"><!-- 配送先の入力 -->
       <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>配送先の入力</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>お名前</td>
              <td><%= text_field_tag :send_name %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= text_field_tag :send_post_code %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= text_field_tag :send_address %></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="payment"><!-- お支払い方法の設定 -->
        <table>
          <thead>
            <tr>
              <th>お支払い方法</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= text_field_tag :payment %></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="main-bottom">

          <button type="button" class="btn btn-default btn-xs cart-button">　前に戻る　</button>
          <%= submit_tag '次に進む', class:"btn btn-warning btn-xs cart-button" %>

      </div>

    <% end %>

  </div>
</div>
