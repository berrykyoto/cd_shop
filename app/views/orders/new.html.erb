<!-- 配送先の入力・支払方法の設定 -->
<div class="body-content">
  <div class="container-fluid main-content">
    <div class="process-box">
      <p class="process">カート　→　<span class="red">配送先の入力・お支払い方法の設定</span>　→　確認　→　完了</p>
    </div>

    <%= form_for(@order) do |f| %>

      <div class="send-info"><!-- 配送先の入力 -->
       <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>配送先の入力</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>お名前</td>
              <td><%= f.text_field :send_name, :value => @user.name,  placeholder: "入力してください" %></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= f.text_field :send_post_code, :value => @user.post_code,  placeholder: "入力してください" %></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= f.text_field :send_address, :value => @user.address,  placeholder: "入力してください" %></td>
            </tr>
          </tbody>
        </table>
      </div>

      <div class="payment"><!-- お支払い方法の設定 -->
        <table>
          <thead>
            <tr>
              <th>お支払い方法</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><label><%= f.radio_button :payment, :transfer %> コンビニ・銀行振込 </label></td>
            </tr>
            <tr>
              <td><label><%= f.radio_button :payment, :credit %> クレジットカード決済</label></td>
            </tr>
            <tr>
              <td><label><%= f.radio_button :payment, :cash %> 代金引換</label></td>
            </tr>
             <tr>
              <td><%= f.select :status, Order.statuses.keys, {} , class: 'form-control btn btn-default' %></td>
            </tr>
          </tbody>
        </table>
      </div>

      <p><%= f.hidden_field :user_id, :value => @user.id %></p><!-- ユーザーのIDをわたす -->
      <p><%= f.hidden_field :status, :value => 0 %></p><!-- ステータス0=出荷準備中をわたす -->

      <div class="main-bottom">

          <button type="button" class="btn btn-default btn-xs cart-button">　前に戻る　</button>
          <%= f.submit '　次に進む　', class:"btn btn-warning btn-xs cart-button" %>

      </div>

    <% end %>

  </div>
</div>
