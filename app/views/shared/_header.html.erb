<!-- ヘッダー　部分テンプレート -->

<header>

  <div class="header-top"><!-- ヘッダー上段 -->
      <nav class="header-content">
        <ul class="nav-list header-top-list">
          <% if  user_signed_in? %>

            <li class="nav-list-item">
              <%= link_to "マイページ", user_path(current_user.id), class: "header-top-a link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to "カート", cart_items_path(current_user.id), class: "header-top-a link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to "注文履歴", user_path(current_user.id), class: "header-top-a link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "header-top-a link-type-basic" %>
            </li>

          <% elsif  admin_signed_in? %>

            <li class="nav-list-item">
              <%= link_to "管理者ページ", admin_path(current_admin.id), class: "header-top-a link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to '商品の新規追加', new_item_path, class: "header-top-a link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to "ユーザー一覧", users_path, class: "header-top-a link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to "注文履歴一覧", orders_path, class: "header-top-a link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to "お問い合わせ一覧", contacts_path, class: "header-top-a link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "header-top-a link-type-basic" %>
            </li>

          <% else %>

            <li class="nav-list-item">
              <%= link_to "ログイン", new_user_session_path, class: "header-top-a link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to "会員登録", new_user_registration_path, class: "header-top-a link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to '当サイトについて','#', class: "header-top-a link-type-basic" %>
            </li>

          <% end %>

        </ul>
      </nav>
    </div>
  </div>

  <div class="header-bottom"><!-- ヘッダー下段 -->
      <nav class="header-content">
        <ul class="nav-list header-bottom-list">
          <li class="nav-list-item"><%= link_to "ホーム", root_path, class: "header-bottom-a link-type-basic" %></li>
          <li class="nav-list-item"><%= link_to 'アニメから探す','#', class: "header-bottom-a link-type-basic" %></li>
          <li class="nav-list-item"><%= link_to 'アーティストから探す','#', class: "header-bottom-a link-type-basic" %></li>
        </ul>
      </nav>
  </div>

  <div class="header-logo"></div><!-- ロゴ画像 -->

</header>