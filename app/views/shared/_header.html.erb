<!-- ヘッダー　部分テンプレート -->

<header>

  <div class="header-top"><!-- ヘッダー上段 -->
      <nav class="header-content">
        <ul class="nav-list header-top-list">
          <% if  user_signed_in? %>

            <li class="nav-list-item">
              <%= link_to " マイページ(注文履歴)", user_path(current_user.id), class: "glyphicon glyphicon-user header-top-a link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to " カート", cart_items_path(current_user.id), class: "glyphicon glyphicon-shopping-cart header-top-a link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to " ログアウト", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out header-top-a link-type-basic" %>
            </li>

          <% elsif  admin_signed_in? %>

            <li class="nav-list-item">
              <%= link_to "管理者ページ", admin_path(current_admin.id), class: "header-top-a link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to 'ジャンルの新規追加', genres_path, class: "header-top-a link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to '商品の新規追加', new_item_path, class: "header-top-a link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to "商品一覧", admin_index_path, class: "header-top-a link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to "ユーザー一覧", users_path, class: "header-top-a link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to "注文履歴一覧", orders_path, class: "header-top-a link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to "お問い合わせ一覧", contacts_path, class: "header-top-a link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "header-top-a link-type-basic" %>
            </li>

          <% else %>

            <li class="nav-list-item">
              <%= link_to " ログイン", new_user_session_path, class: "glyphicon glyphicon-log-in header-top-a link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to " 会員登録", new_user_registration_path, class: "glyphicon glyphicon-edit header-top-a link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to ' 当サイトについて','#', class: "glyphicon glyphicon-link header-top-a link-type-basic" %>
            </li>

          <% end %>

        </ul>
      </nav>
    </div>
  </div>

  <div class="header-bottom"><!-- ヘッダー下段 -->
      <nav class="header-content">
        <ul class="nav-list header-bottom-list">
          <li class="nav-list-item"><%= link_to " ホーム", root_path, class: "glyphicon glyphicon-home header-bottom-a link-type-basic" %></li>
        </ul>
      </nav>
  </div>

  <div class="header-logo"></div><!-- ロゴ画像 -->

</header>