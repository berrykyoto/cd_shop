<%= render 'shared/header' %>
<div class="body-content">
  <div class="container-fluid main-content">
    <h2 class="oa">お問い合わせ詳細</h2>
 		<table class="table">
            <tbody>
              <tr>
                <td class="col-sm-3">お名前</td>
                <td><%= @contact.name %></td>
              </tr>
              <tr>
                <td>電話番号</td>
                <td><%= @contact.phone %></td>
              </tr>
              <tr>
                <td>メールアドレス</td>
                <td><%= @contact.email %></td>
              </tr>
              <tr>
                <td>お問い合わせタイトル</td>
                <td><%= @contact.title %></td>
              </tr>
              <tr>
                <td>お問い合わせ内容</td>
                <td class="word"><%= @contact.body %></td>
              </tr>
            </tbody>
          </table>
          <div class="ob"><%= link_to "削除",contact_path(@contact), method: :delete ,data: { confirm: '削除しますか？' } ,class:"btn btn-lg btn-danger"%></div>
   	</div>
</div>

<%= render 'shared/footer' %>