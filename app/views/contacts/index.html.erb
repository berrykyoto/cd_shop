<%= render 'shared/header' %>
 <div class="body-content">
   <div class="container-fluid main-content">
    <h2 class="oa">お問い合わせ一覧</h2>
     <div class="row">
		<table class="table">
		 <thead>
		  <tr>
			<th class="col-sm-1">お名前</th>
			<th class="col-sm-1">電話番号</th>
			<th class="col-sm-3">メールアドレス</th>
			<th class="col-sm-5">お問い合わせタイトル</th>
			<th class="col-sm-1"></th>
			<th class="col-sm-1"></th>
		  </tr>
		 </thead>
 					<tbody>
 						<% @contacts.each do |contact| %>
 						<tr>
 							<td><%= contact.name %></td>
 							<td><%= contact.phone %></td>
 							<td><%= contact.email %></td>
 							<td><%= contact.title %></td>
							<td><%= link_to "詳細",contact_path(contact),class:"btn btn-sm btn-info" %></td>
							<td><%= link_to "削除",contact_path(contact), method: :delete ,data: { confirm: '削除しますか？' },class:"btn btn-sm btn-danger" %></td>
 						</tr>
 						<% end %>
 					</tbody>
 				</table>
		</div>
	</div>
</div>

<%= render 'shared/footer' %>